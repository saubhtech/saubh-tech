# ─── Saubh.Tech Platform — Dev Environment Variables ─────────────────────────
# Copy this file to .env.dev and fill in your values:
#   cp .env.dev.example .env.dev
#
# NEVER commit .env.dev — it contains real secrets.
# ─────────────────────────────────────────────────────────────────────────────

# ─── PostgreSQL (main) ──────────────────────────────────────────────────────
POSTGRES_USER=saubhtech
POSTGRES_PASSWORD=change_me_postgres_dev
POSTGRES_DB=saubhtech
POSTGRES_PORT=5432

# ─── PostgreSQL (test) ──────────────────────────────────────────────────────
POSTGRES_TEST_USER=saubhtech_test
POSTGRES_TEST_PASSWORD=change_me_postgres_test
POSTGRES_TEST_DB=saubhtech_test
POSTGRES_TEST_PORT=5433

# ─── Redis ──────────────────────────────────────────────────────────────────
REDIS_PASSWORD=change_me_redis_dev
REDIS_PORT=6379

# ─── MinIO (S3-compatible storage) ──────────────────────────────────────────
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_me_minio_dev
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ─── Keycloak (IAM / Auth) ─────────────────────────────────────────────────
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=change_me_keycloak_dev
KEYCLOAK_PORT=8080

# ─── App ────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:3000/api
JWT_SECRET=change_me_jwt_secret_min_32_chars_long
