# ─── Web (apps/web) ─────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_LANG_API_URL=/api/lang
NEXT_PUBLIC_BASE_URL=https://saubh.tech
LANG_API_INTERNAL_URL=http://localhost:3100

# ─── API (apps/api) ─────────────────────────────────────────────────
DATABASE_URL=postgresql://saubhtech:change_me_postgres_dev@127.0.0.1:5555/saubhtech?schema=public
PORT=3001
CORS_ORIGINS=http://localhost:3000

# ─── Keycloak SSO (apps/api + apps/admin) ───────────────────────────
KEYCLOAK_URL=https://admin.saubh.tech/auth
KEYCLOAK_REALM=saubh
KEYCLOAK_CLIENT_ID=saubh-admin-app
KEYCLOAK_CLIENT_SECRET=change_me_keycloak_client_secret
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=change_me_keycloak_admin_password

# ─── Admin Portal (apps/admin) ──────────────────────────────────────
NEXT_PUBLIC_ADMIN_URL=https://admin.saubh.tech

